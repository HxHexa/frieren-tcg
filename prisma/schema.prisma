generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Player {
  id           Int           @id @default(autoincrement())
  discordId    String        @unique
  achievements Achievement[] @relation("PlayerAchievements")

  matchesAsPlayer1   Match[]            @relation("Player1")
  matchesAsPlayer2   Match[]            @relation("Player2")
  matchesAsWinner    Match[]            @relation("Winner")
  characterMasteries CharacterMastery[]
  ladderRanks        LadderRank[]
}

model LadderRank {
  id       Int    @id @default(autoincrement())
  playerId Int
  player   Player @relation(fields: [playerId], references: [id])
  ladderId Int
  ladder   Ladder @relation(fields: [ladderId], references: [id])

  rank Int

  @@unique([ladderId, playerId])
}

model Achievement {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  earners     Player[] @relation("PlayerAchievements")
}

model Ladder {
  id          Int          @id @default(autoincrement())
  name        String       @unique
  matches     Match[]
  ladderRanks LadderRank[]
}

model Match {
  id Int @id @default(autoincrement())

  ladderId Int
  ladder   Ladder @relation(fields: [ladderId], references: [id])

  player1Id Int
  player1   Player @relation("Player1", fields: [player1Id], references: [id])
  player2Id Int
  player2   Player @relation("Player2", fields: [player2Id], references: [id])

  winnerId Int
  winner   Player @relation("Winner", fields: [winnerId], references: [id])

  finishedAt DateTime @default(now())
}

model Character {
  id   Int    @id @default(autoincrement())
  name String @unique

  CharacterMastery CharacterMastery[]
}

model CharacterMastery {
  id          Int       @id @default(autoincrement())
  playerId    Int
  player      Player    @relation(fields: [playerId], references: [id])
  characterId Int
  character   Character @relation(fields: [characterId], references: [id])

  masteryPoints Int @default(0)
  matchesWon    Int @default(0)
  matchesLost   Int @default(0)
  matchesTied   Int @default(0)

  @@unique([playerId, characterId])
}
